// 背景图片的大小
bg-image($url)
  background-image: url($url+"@2x.png")
  @media(-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image: url($url+"@3x.png")

// 文字不折行...
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域的
extend-click()
  position: relative
  &:before
    content:''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px